<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="lib.CustomerEntity" table="customer" schema="bookstore">
        <id name="username">
            <column name="username" sql-type="varchar(1024)" length="1024"/>
        </id>
        <property name="password">
            <column name="password" sql-type="varchar(1024)" length="1024"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(1024)" length="1024"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar(1024)" length="1024"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(1024)" length="1024"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(1024)" length="1024"/>
        </property>
    </class>
</hibernate-mapping>